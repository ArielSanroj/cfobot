[flake8]
max-line-length = 100
extend-ignore = E203, W503, E501
exclude = 
    .git,
    __pycache__,
    venv,
    env,
    .venv,
    .env,
    build,
    dist,
    *.egg-info,
    .coverage,
    htmlcov,
    .pytest_cache,
    .mypy_cache

# Per-file ignores
per-file-ignores =
    __init__.py:F401
    tests/*:S101
    cfobot/constants.py:E501

# Import organization
import-order-style = google
application-import-names = cfobot
